<!DOCTYPE html>
<html>
  <head>
    <title>系统界面</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.bootcss.com/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
  </head>
  <body>
    <h1>欢迎 </h1>
	<form action="/account" method="post">
      <div class="form-group">
          <div class="form-name left">
            <label>账单类型</label>
          </div>
          <input type="text" name="type" class="form-input left"/>
          <div class="form-name left">
            <label>账单金额</label>
          </div>
          <input type="number" name="money" class="form-input left" /> 
		  <div class="form-name left">
            <label>收入/支出</label>
          </div>
          <input type="radio" name="income" class="form-input left" value="收入" />收入
          <input type="radio" name="income" class="form-input left" value="支出" checked />支出
      </div>
      <div class="form-btn">
          <input type="submit" value="添加账单"  />
		  <input type="button" value="显示周账单" onclick="showAccount(this.value)" />
          <input type="button" value="显示月账单" onclick="showAccount(this.value)" />
          <input type="button" value="显示年账单" onclick="showAccount(this.value)" />
      </div>
      <div class="form-btn">
        <label class="warn"><%=errMsg %></label>
      </div>
    </form>
	<script type="text/javascript">
      function showAccount(time){
	  	if(time=="显示周账单")
			time = "week";
		if(time=="显示月账单")
			time = "month";
		if(time=="显示年账单")
			time = "year";
        location.href = "/showaccount/"+time;
      }
    </script>
  </body>